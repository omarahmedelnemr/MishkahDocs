[
    {
        "endpoint": "/admin-attendance/attendance_record",
        "section": "admin-attendance",
        "method": "GET",
        "description": "Get the attendance records of a lecture",
        "parameters": [
            {
                "paramName": "lectureID",
                "paramType": "string",
                "paramDescription": "The ID of the lecture"
            }
        ],
        "requestExample": {
            "lectureID": "lecture001"
        },
        "responseParameters": [
            {
                "paramName": "attended",
                "paramType": "integer",
                "paramDescription": "The number of people who attended"
            },
            {
                "paramName": "late",
                "paramType": "integer",
                "paramDescription": "The number of people who were late"
            },
            {
                "paramName": "absent",
                "paramType": "integer",
                "paramDescription": "The number of people who were absent"
            },
            {
                "paramName": "excuse",
                "paramType": "integer",
                "paramDescription": "The number of people who had an excuse"
            },
            {
                "paramName": "people",
                "paramType": "array",
                "paramDescription": "The list of people and their attendance status",
                "paramItems": {
                    "type": "object",
                    "properties": {
                        "userID": {
                            "type": "string",
                            "description": "The ID of the user"
                        },
                        "username": {
                            "type": "string",
                            "description": "The username of the user"
                        },
                        "status": {
                            "type": "string",
                            "description": "The attendance status (if it was recorded, otherwise it is Null)"
                        }
                    }
                }
            }
        ],
        "responseExample": {
            "attended": 10,
            "late": 2,
            "absent": 3,
            "excuse": 1,
            "people": [
                {
                    "userID": "user001",
                    "username": "johndoe",
                    "status": "attended"
                },
                {
                    "userID": "user002",
                    "username": "janedoe",
                    "status": "late"
                }
            ]
        },
        "responseDescription": "Receives the attendance records of the specified lecture, including attendance counts and the list of people with their statuses"
    },
    {
        "endpoint": "/admin-attendance/submit_attendance_record",
        "section": "admin-attendance",
        "method": "POST",
        "description": "Submit an attendance record",
        "parameters": [
            {
                "paramName": "lectureID",
                "paramType": "string",
                "paramDescription": "The ID of the lecture"
            },
            {
                "paramName": "people",
                "paramType": "array",
                "paramDescription": "The list of people and their attendance statuses",
                "paramItems": {
                    "type": "object",
                    "properties": {
                        "userID": {
                            "type": "string",
                            "description": "The ID of the user"
                        },
                        "status": {
                            "type": "string",
                            "description": "The attendance status (if it was recorded, otherwise it is Null)"
                        }
                    }
                }
            }
        ],
        "requestExample": {
            "lectureID": "lecture001",
            "people": [
                {
                    "userID": "user001",
                    "status": "attended"
                },
                {
                    "userID": "user002",
                    "status": "late"
                }
            ]
        },
        "responseExample": "Done",
        "responseDescription": "Receives 'Done' if the attendance record is successfully submitted, or one of the common errors"
    }
]
